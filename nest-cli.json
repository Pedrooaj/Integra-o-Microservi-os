{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "proto/*.proto"
    ],
    "webpack": true,
    "tsConfigPath": "./tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps",
  "projects": {
    "games": {
      "type": "application",
      "root": "apps/games",
      "entryFile": "main",
      "sourceRoot": "apps/games/src",
      "compilerOptions": {
        "tsConfigPath": "apps/games/tsconfig.app.json"
      }
    },
    "authentication": {
      "type": "application",
      "root": "apps/authentication",
      "entryFile": "main",
      "sourceRoot": "apps/authentication/src",
      "compilerOptions": {
        "tsConfigPath": "apps/authentication/tsconfig.app.json"
      }
    }
  }
}