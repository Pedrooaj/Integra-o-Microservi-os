generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/@prisma/client-games"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_GAMES_URL") 
}

model Game {
  id          String   @id @default(uuid())
  title       String   @unique
  description String
  launchDate  DateTime
  urlPicture  String
  tags        String[]
  publisher   String
  studio      String
  price       Float
  commentsId  String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
